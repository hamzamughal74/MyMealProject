<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddRestaurant"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#000">
    <ImageButton
        android:id="@+id/RestImage"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:text="Add Image"
        android:onClick="RestImage"

        android:textColor="#fff"
        android:textSize="38dp"

        android:background="@drawable/orange_stroke" />

    <EditText
        android:id="@+id/RestName"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textSize="24sp"
        android:hint="Restaurant Name"
        android:inputType="textCapWords"
        android:background="@drawable/edittext_round"/>

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        app:cardBackgroundColor="#0FFFFFFF"
        app:cardCornerRadius="8dp">
        <EditText
            android:id="@+id/RestAdress"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/edittext_round"
            android:hint="Adress"
            android:inputType="textCapWords"
            android:padding="5dp"
            android:textAlignment="center"
            android:textSize="24sp" />
        <EditText
            android:id="@+id/RestContact"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="80dp"
            android:hint="Contact"
            android:background="@drawable/edittext_round"
            android:inputType="number"
            android:padding="5dp"
            android:textAlignment="center"
            android:textSize="24sp" />

        <ImageButton
            android:id="@+id/locationbtn"
            android:layout_width="54dp"
            android:layout_height="56dp"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="150dp"
            android:background="@drawable/loc_off"
            android:onClick="btnLocation"
            android:scaleType="centerCrop" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="220dp"
            android:onClick="RestDone"
            android:background="@drawable/btn_round"
            android:textColor="#fff"
            />


    </android.support.v7.widget.CardView>
</LinearLayout>