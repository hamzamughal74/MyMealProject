<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".IntelliDeal.choose"
    android:background="@android:color/black">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:id="@+id/appbar"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_round"

        >
        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginStart="10dp"
            android:text="Select Your Choices"
            android:textColor="@android:color/white"
            android:textSize="26sp"
            android:textStyle="bold" />

    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:layout_marginTop="90dp"
        android:layout_below="@+id/appbar"
       android:id="@+id/l1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"

        >

        <CheckBox
            android:id="@+id/chicken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chicken"
            android:textColor="@android:color/white"
            android:buttonTint="@android:color/white"
            android:textSize="18sp"

            />
        <CheckBox
            android:id="@+id/beaf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beaf"
            android:textColor="@android:color/white"
            android:buttonTint="@android:color/white"
            android:textSize="18sp"
            />
        <CheckBox
            android:id="@+id/mutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mutton"
            android:textColor="@android:color/white"
            android:buttonTint="@android:color/white"
            android:textSize="18sp"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/l2"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l1"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"

        >

        <CheckBox
            android:id="@+id/Pakistani"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/l2"
            android:layout_alignStart="@+id/l2"
            android:buttonTint="@android:color/white"
            android:text="Pakistani"

            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/Rice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@android:color/white"
            android:text="Rice"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/BBQ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@android:color/white"
            android:text="BBQ"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/FastFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@android:color/white"
            android:text="FastFood"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l2"
        android:orientation="vertical"
        android:gravity="center">
        <EditText
            android:id="@+id/budget"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="80dp"
            android:background="@drawable/edittext_round"
            android:hint="Budget"
            android:inputType="number"
            android:padding="5dp"
            android:textAlignment="center"
            android:textSize="24sp" />
        <EditText
            android:id="@+id/person"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@drawable/edittext_round"
            android:hint="Persons"
            android:inputType="number"
            android:padding="5dp"
            android:textAlignment="center"
            android:textSize="24sp" />
        <Button
            android:id="@+id/btnDone"
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_round"
            android:text="Done"
            android:textColor="@android:color/white"
            android:onClick="btnDone"
            android:textSize="24sp"/>
    </LinearLayout>
</RelativeLayout>